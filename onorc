;(set! *offlineimap-path* "/opt/bin/offlineimap")
;(set! *offlineimap-args* "-u quiet")

(ono-menu
  (vector "Fetch yahoo" "yahoo")
  (vector "Fetch gmail" "gmail")
  (vector "Fetch All" (lambda () (offlineimap #f #f))))

